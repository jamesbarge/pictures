# FilmCal2 Environment Variables
# Copy this file to .env.local and fill in your values

# =============================================================================
# DATABASE (Supabase)
# =============================================================================
# Get these from: Supabase Dashboard > Project Settings > Database
# Use the "Transaction pooler" connection string for serverless

DATABASE_URL=postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres?pgbouncer=true

# =============================================================================
# SUPABASE CLIENT (optional - for auth later)
# =============================================================================
# Get these from: Supabase Dashboard > Project Settings > API

NEXT_PUBLIC_SUPABASE_URL=https://[project-ref].supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJ...

# =============================================================================
# TMDB API
# =============================================================================
# Get from: https://www.themoviedb.org/settings/api

TMDB_API_KEY=your_tmdb_api_key_here
TMDB_READ_ACCESS_TOKEN=your_tmdb_read_access_token_here

# =============================================================================
# CRON SECURITY
# =============================================================================
# Generate a random string for securing cron endpoints

CRON_SECRET=generate_a_random_secret_here

# =============================================================================
# GOOGLE MAPS
# =============================================================================
# Get from: https://console.cloud.google.com/apis/credentials
# Required APIs: Maps JavaScript API, Distance Matrix API

# Client-side (for map display)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Server-side (for travel time calculations - same key, but keep separate for security)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# =============================================================================
# SLACK NOTIFICATIONS (Optional)
# =============================================================================
# Webhook URL for scraper failure alerts
# Get from: https://api.slack.com/apps → Create App → Incoming Webhooks

SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# =============================================================================
# POSTHOG (Analytics & Error Tracking)
# =============================================================================
# PostHog handles both analytics and error tracking (client + server)
# Project API key (for client-side tracking)
# Get from: PostHog → Project Settings → Project API Key

NEXT_PUBLIC_POSTHOG_KEY=phc_your_project_key_here
NEXT_PUBLIC_POSTHOG_HOST=https://eu.i.posthog.com

# Personal API key (for server-side API queries - admin dashboard)
# Generate from: PostHog → Settings → Personal API Keys

POSTHOG_PERSONAL_API_KEY=phx_your_personal_api_key_here

# Project ID (for API queries)
# Find in: PostHog → Project Settings → Project ID

POSTHOG_PROJECT_ID=12345

# =============================================================================
# SCRAPER API (Required for BFI imports)
# =============================================================================
# ScraperAPI is used to bypass Cloudflare protection on BFI website
# Without this key, BFI PDF imports will fail with 403 Forbidden
# Get from: https://www.scraperapi.com/ (free tier: 5,000 requests/month)

SCRAPER_API_KEY=your_scraper_api_key_here

# =============================================================================
# APP CONFIG
# =============================================================================

NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Set to "true" to enable, anything else (or unset) = disabled

NEXT_PUBLIC_ENABLE_SEASONS=false
